{
  "name": "fishery",
  "version": "0.4.0",
  "description": "A library for setting up JavaScript factories to help build objects as test data, with full TypeScript support",
  "keywords": [
    "factories",
    "testing",
    "typescript",
    "factory_bot",
    "factorybot",
    "mock",
    "test data"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "test": "jest",
    "testinit": "jest --init",
    "pretty": "prettier --write '{*,.*,lib/**/*}.{ts,json,md}'",
    "verifyPretty": "prettier --check '{*,.*,lib/**/*}.{ts,json,md}'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thoughtbot/fishery.git"
  },
  "author": "Stephen Hanson <shanson@thoughtbot.com> (https://shanson.co)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thoughtbot/fishery/issues"
  },
  "homepage": "https://github.com/thoughtbot/fishery#readme",
  "prettier": {
    "useTabs": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "semi": true,
    "overrides": [
      {
        "files": "**/package.json",
        "options": {
          "parser": "json-stringify"
        }
      }
    ]
  },
  "devDependencies": {
    "@types/jest": "^23.3.12",
    "@types/lodash.merge": "^4.6.6",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.1.0",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "lodash.merge": "^4.6.2"
  }
}
